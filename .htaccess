<IfModule mod_rewrite.c>
    Options -MultiViews

    RewriteEngine On
    #RewriteBase /path/to/app
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^ app/index.php [L]

    php_value register_globals Off
	php_value magic_quotes_gpc Off
	php_value register_globals Off
	php_value register_long_arrays Off
</IfModule>
