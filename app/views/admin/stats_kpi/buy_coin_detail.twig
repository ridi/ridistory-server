{% extends '/admin/base.twig' %}

{% block container %}
    <ul class="nav nav-tabs">
        <li><a href="/admin/stats_kpi/buy">코인 구매 지표</a></li>
        <li class="active"><a href="/admin/stats_kpi/buy/detail">코인 구매 지표(상세)</a></li>
    </ul>

    <form>
        <div class="well form-inline">
            <h4>기간 설정</h4>
            <input type='text' class='input-medium' name='begin_date' value='{{ begin_date }}' placeholder='0000-00-00' />
            ~
            <input type='text' class='input-medium' name='end_date' value='{{ end_date }}' placeholder='0000-00-00' />
            <button class="btn">조회</button>
        </div>
    </form>

    <div class="well form-inline">
        <h4>코인 구매 상세 지표 (인앱)</h4>
        <table class='table'>
            <thead>
            <tr>
                <th>날짜</th>
                <th>coin_29</th>
                <th>coin_99</th>
                <th>coin_139</th>
                <th>coin_349</th>
                <th>충전코인수</th>
                <th>코인구매액총계</th>
            </tr>
            </thead>
            <tbody>
            {% for ibc in inapp_buy_coins %}
                <tr>
                    <td>{{ ibc.purchase_date }}</td>
                    <td>{{ ibc.coin_29 }}</td>
                    <td>{{ ibc.coin_99 }}</td>
                    <td>{{ ibc.coin_139 }}</td>
                    <td>{{ ibc.coin_349 }}</td>
                    <td>{{ ibc.coin_amount + ibc.bonus_coin_amount }}</td>
                    <td>{{ ibc.total_buy_sales|number_format(0, '', ',') }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}