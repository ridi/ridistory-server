{% extends '/admin/base.twig' %}

{% block container %}
    <form>
        <div class="well form-inline">
            <h4>리디캐시 결제내역 검색</h4>
            <select id='search' name='search_type'>
                <option value='ridibooks_id'>리디북스 ID</option>
                <option value='uid'>유저 ID</option>
                <option value='tid'>주문번호</option>
            </select>
            <input type='text' class='input-xlarge' name='search_keyword' value='{{ search_keyword }}' placeholder='검색어를 입력해주세요.' />
            <button class="btn">검색</button>
        </div>
    </form>

    <table class='table table-hover'>
        <thead>
        <tr>
            <th>유저 ID</th>
            <th>리디북스 ID</th>
            <th>주문번호</th>
            <th>SKU</th>
            <th>결제 시간</th>
            <th>상태</th>
        </tr>
        </thead>
        <tbody id='js_tbody'>
        {% for coin_sale in coin_sales %}
            <tr data-salesid='{{ coin_sale.id }}'>
                <td>{{ coin_sale.u_id }}</td>
                <td>{{ coin_sale.ridibooks_id }}</td>
                <td>{{ coin_sale.t_id }}</td>
                <td>{{ coin_sale.sku }}</td>
                <td>{{ coin_sale.purchase_time }}</td>
                <td>
                    {% if coin_sale.status == 'OK' %}
                        정상
                    {% elseif coin_sale.status == 'REFUNDED' %}
                        <span style="color: #0000FF">환불됨</span>
                    {% else %}
                        <span style="color: #FF0000">오류</span>
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul class="pager">
        <li class="previous">
            {% if cur_page - 1 < 0 %}
                <a href="/admin/ridicash_sales/list?page=0">&larr; Newer</a>
            {% else %}
                <a href="/admin/ridicash_sales/list?page={{ cur_page - 1 }}">&larr; Newer</a>
            {% endif %}
        </li>
        <li class="next">
            <a href="/admin/ridicash_sales/list?page={{ cur_page + 1 }}">Older &rarr;</a>
        </li>
    </ul>

{% endblock %}

{% block script %}
    <script>
        $(function() {
            $('#search').val('{{ search_type }}');

            $('#js_tbody tr').click(function() {
                var rcb_sale_id = $(this).data('salesid');
                location.href = '/admin/ridicash_sales/' + rcb_sale_id;
            });

            $('#js_tbody tr').hover(function() {
                        $(this).css('cursor', 'pointer');
                    }, function() {
                        $(this).css('cursor', '');
                    }
            );
        });
    </script>
{% endblock %}