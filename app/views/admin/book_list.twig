{% extends 'admin/base.twig' %}

{% block container %}

<table class='table table-hover'>
	<thead>
		<tr>
			<th class='span1'>책 ID</th>
			<th>제목</th>
			<th class='span2'>시작일</th>
			<th class='span2'>종료일</th>
		</tr>
	</thead>
	<tbody id='js_tbody'>
		{% for book in books %}
		<tr data-bid='{{ book.id }}'>
			<td>{{ book.id }}</td>
			<td>{{ book.title }}</a></td>
			<td>{{ book.begin_date }}</td>
			<td>{{ book.end_date }}</td>
		</tr>
		{% endfor %}
	</tbody>
</table>
<button class='btn btn-primary' id='js_add'>추가</button>

{% endblock %}

{% block script %}
<script>
$(function() {
    $('#js_add').click(function() {
        location.href = '/admin/book/add';
    });
    
    $('#js_tbody tr').click(function() {
        var b_id = $(this).data('bid');
        location.href = '/admin/book/' + b_id;
    });
});
</script>
{% endblock %}