{% extends '/admin/base.twig' %}

{% block container %}
<section class='row'>
    <div class='span4'>
    <h3>기기등록 ({{ total_registered }})</h3>
    <table class='table'>
    	<tr>
    		<td><b>DATE</b></td>
    		<td><b>iOS</b></td>
    		<td><b>Android</b></td>
    		<td><b>TOTAL</b></td>
    	</tr>
        {% for r in register_stat %}
        <tr>
            <td>{{ r.date }}</td>
            <td>{{ r.ios }}</td>
            <td>{{ r.android }}</td>
            <td><b>{{ r.total }}</b></td>
        </tr>
        {% endfor %}
    </table>
    </div>
</section>

<hr class='separator'>

<section class='row'>
    <div class='span12'>
    <h3>알림받기 설정수</h3>
    <table class='table'>
    	<tr>
    		<td><b>TITLE</b></td>
    		<td><b>D-6</b></td>
    		<td><b>D-5</b></td>
    		<td><b>D-4</b></td>
    		<td><b>D-3</b></td>
    		<td><b>D-2</b></td>
    		<td><b>D-1</b></td>
    		<td><b>TODAY</b></td>
    		<td><b>SUM</b></td>
    		<td><b>TOTAL</b></td>
    	</tr>
        {% for p in interest_stat %}
        <tr>
        	<td>{{ p.title }}</td>
            <td>{{ p.interested_d6 }}</td>
            <td>{{ p.interested_d5 }}</td>
            <td>{{ p.interested_d4 }}</td>
            <td>{{ p.interested_d3 }}</td>
            <td>{{ p.interested_d2 }}</td>
            <td>{{ p.interested_d1 }}</td>
            <td>{{ p.interested_d0 }}</td>
            <td><b>{{ p.interested_sum }}</b></td>
            <td><b>{{ p.interested_total }}</b></td>
        </tr>
        {% endfor %}
    </table>
    </div>
</section>

{% endblock %}
