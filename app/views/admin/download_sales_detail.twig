{% extends '/admin/base.twig' %}

{% block container %}
    <table class='table'>
        <colgroup>
            <col class="span1">
            <col class="span7">
        </colgroup>
        <tr>
            <th>책 ID</th>
            <td>{{ download_sales.b_id }}</td>
        </tr>
        <tr>
            <th>상품명</th>
            <td><a href='/admin/book/{{ download_sales.b_id }}' >{{ download_sales.title }}</a></td>
        </tr>
        <tr>
            <th>CP명</th>
            <td><a href='/admin/cp_account/{{ download_sales.cp_id }}' >{{ download_sales.cp_name }}</a></td>
        </tr>
        <tr>
            <th>정산율</th>
            <td>{{ download_sales.royalty_percent }}%</td>
        </tr>
        <tr>
            <th>다운로드</th>
            <td>무료: {{ footer.total_free_download }}건 / 유료: {{ footer.total_charged_download }}건</td>
        </tr>
        <tr>
            <th>정산액</th>
            <td>{{ (footer.total_sales * (download_sales.royalty_percent/100) * 90)|number_format(0, '', ',') }}원</td>
        </tr>
        <tr>
            <th>조회 기간</th>
            <td>{{ get_date_scope(begin_date, end_date) }}</td>
        </tr>
        <tr>
            <th>연재별 판매</th>
            <td>
                <table class='table table-hover table-striped table-condensed'>
                    <thead>
                    <tr>
                        <th>파트 제목</th>
                        <th>판매가격</th>
                        <th>무료 다운 수</th>
                        <th>유료 다운 수</th>
                        <th>누적 판매 액</th>
                    </tr>
                    </thead>
                    <tbody id='js_part_list'>
                    {% for dsd in download_sales_detail %}
                        <tr>
                            <td><a href='/admin/part/{{ dsd.p_id }}'>{{ dsd.seq }}. {{ dsd.title }} </a></td>
                            <td>{{ (dsd.price * 90)|number_format(0, '', ',') }}</td>
                            <td>{{ dsd.free_download }}</td>
                            <td>{{ dsd.charged_download }}</td>
                            <td>{{ (dsd.total_coin_amount * 90)|number_format(0, '', ',') }}</td>
                        </tr>
                    {% endfor %}
                        <tr class="info">
                            <td colspan='2'><b>총</b></td>
                            <td><b>{{ footer.total_free_download }}</b></td>
                            <td><b>{{ footer.total_charged_download }}</b></td>
                            <td><b>{{ (footer.total_sales * 90)|number_format(0, '', ',') }}원</b></td>
                        </tr>
                    </tbody>
                </table>
            </td>
        </tr>
     </table>

{% endblock %}