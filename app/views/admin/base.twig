							    <a href="/admin/stats">통계</a>
							</li>
						</ul>
					</div>
				</div>
			</div>
			{% if alert is defined %}
				{% for key in alert|keys %}
				<div class='alert alert-{{ key }}'>
                    <button class="close" data-dismiss="alert">&times;</button>
				    {{ alert[key] }}
    		    </div>
				{% endfor %}
			{% endif %}
            
            {% block container %}
            {% endblock %}
        </div> <!-- /container -->

		<footer class="footer">
			<div class="container">
				<p>
				    Ridibooks © 2013
				</p>
				<ul class="footer-links">
