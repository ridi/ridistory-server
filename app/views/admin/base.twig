    <body>
        <header class="header">
            <div class="container">
            {% block header %}
            <div>
                <img src='/static/img/gnb_title.png' />
            </div>
            {% endblock %}
            </div>
        </header>
        
        <div class="container">
			
            <div class="navbar">
				<div class="navbar-inner">
					<div class="container">
						<ul class="nav">
							<li>
								<a href="/admin/book/list">책 관리</a>
							</li>
							<li>
							    <a href="/admin/notice/list">공지사항 관리</a>
							</li>
							<li>
							    <a href="/admin/comment/list">리뷰 관리</a>
							</li>
							<li>
