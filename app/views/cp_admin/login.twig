{% extends '/cp_admin/base.twig' %}

{% block css %}
    <style>
        body {
            background-color: #f5f5f5;
        }

        .form-signin {
            max-width: 300px;
            padding: 19px 29px 29px;
            margin: 100px auto 20px;
            background-color: #fff;
            border: 1px solid #e5e5e5;
            -webkit-border-radius: 5px;
            -moz-border-radius: 5px;
            border-radius: 5px;
            -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.05);
            -moz-box-shadow: 0 1px 2px rgba(0,0,0,.05);
            box-shadow: 0 1px 2px rgba(0,0,0,.05);
        }
        .form-signin .form-signin-heading, .form-signin .checkbox {
            margin-bottom: 10px;
        }
        .form-signin input[type="text"], .form-signin input[type="password"] {
            font-size: 16px;
            height: auto;
            margin-bottom: 15px;
            padding: 7px 9px;
        }

        #cp_btn_area, #cp_info_area {
            display: none;
        }
    </style>
{% endblock %}

{% block header %}
{% endblock %}

{% block container %}
    <form class="form-signin" action="/cp_admin/login/check" method="post">
        <h2 class="form-signin-heading">CP 로그인</h2>
        <input type="text" class="input-block-level" placeholder="아이디" name="id">
        <input type="password" class="input-block-level" placeholder="비밀번호" name="pw">
        <button class="btn btn-large btn-primary" type="submit">로그인</button>
    </form>
{% endblock %}